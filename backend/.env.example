# ============================================
# Django Core Settings
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production-use-at-least-50-characters
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,pulseofpeople.com,www.pulseofpeople.com,api.pulseofpeople.com

# ============================================
# Database Configuration
# ============================================
# Toggle between SQLite (development) and PostgreSQL (production)
USE_SQLITE=True

# PostgreSQL Database (Supabase)
DB_NAME=postgres
DB_USER=postgres.your-project-ref
DB_PASSWORD=your_supabase_database_password_here
DB_HOST=db.your-project-ref.supabase.co
DB_PORT=5432
DB_SSLMODE=require

# ============================================
# Supabase Configuration
# ============================================
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here
SUPABASE_JWT_SECRET=your-supabase-jwt-secret-here

# ============================================
# CORS & Security Settings
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://pulseofpeople.com,https://www.pulseofpeople.com
CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://pulseofpeople.com,https://www.pulseofpeople.com

# Security (Production only - set to True when DEBUG=False)
SECURE_SSL_REDIRECT=False

# ============================================
# Email Configuration (AWS SES - Recommended)
# ============================================
# AWS SES is recommended for production (cheapest option: $0.10/1K emails)
EMAIL_BACKEND=django_ses.SESBackend
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_SES_REGION_NAME=ap-south-1
AWS_SES_REGION_ENDPOINT=email.ap-south-1.amazonaws.com
DEFAULT_FROM_EMAIL=noreply@pulseofpeople.com

# Alternative: Postmark (for critical transactional emails with better deliverability)
POSTMARK_SERVER_TOKEN=your-postmark-server-token-here
POSTMARK_FROM_EMAIL=noreply@pulseofpeople.com

# Alternative: SMTP (Gmail - for development only)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password-here

# ============================================
# SMS Service (MSG91 - Recommended for India)
# ============================================
# MSG91 is the cheapest option for India (~$0.002 per SMS)
MSG91_AUTH_KEY=your-msg91-auth-key-here
MSG91_SENDER_ID=POPINDIA
MSG91_ROUTE=4
# DLT (Distributed Ledger Technology) - Required for India
MSG91_DLT_ENTITY_ID=your-dlt-entity-id
MSG91_DLT_TEMPLATE_ID=your-dlt-template-id

# Alternative: AWS SNS (for push notifications, not SMS)
AWS_SNS_REGION=ap-south-1

# Alternative: Gupshup (backup SMS provider)
GUPSHUP_API_KEY=your-gupshup-api-key
GUPSHUP_APP_NAME=your-app-name

# ============================================
# Maps & Geolocation APIs
# ============================================
# Google Maps API (Recommended for India - best coverage)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Alternative: Mapbox (for development/backup)
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token-here

# ============================================
# Weather API (Visual Crossing - Recommended)
# ============================================
# Visual Crossing is the cheapest with best free tier (1,000 requests/day free)
VISUAL_CROSSING_API_KEY=your-visual-crossing-api-key-here

# Alternative: OpenWeatherMap
OPENWEATHER_API_KEY=your-openweathermap-api-key

# ============================================
# Sentiment Analysis APIs
# ============================================
# HuggingFace Inference API (Recommended - cheapest at ~$0.001 per query)
HUGGINGFACE_API_TOKEN=your-huggingface-api-token-here
HUGGINGFACE_MODEL=distilbert-base-uncased-finetuned-sst-2-english

# Azure Text Analytics (for Hindi sentiment analysis)
AZURE_TEXT_ANALYTICS_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_TEXT_ANALYTICS_KEY=your-azure-text-analytics-key

# OpenAI (as fallback for complex cases)
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud Natural Language API (alternative)
GOOGLE_CLOUD_NLP_KEY=your-google-cloud-nlp-key

# Choose primary provider: huggingface, azure, openai, google
SENTIMENT_API_PROVIDER=huggingface

# ============================================
# Redis Cache (Optional)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# File Storage Configuration
# ============================================
# Cloudinary (Recommended for images/videos - 25GB free tier)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# AWS S3 (for documents and general storage)
# AWS_ACCESS_KEY_ID and AWS_SECRET_ACCESS_KEY already defined above for SES
AWS_S3_BUCKET_NAME=pulseofpeople-documents
AWS_S3_REGION=ap-south-1
AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.ap-south-1.amazonaws.com

# Choose storage backend: cloudinary, s3, supabase
# For images: use cloudinary
# For documents: use s3
DEFAULT_FILE_STORAGE=cloudinary
MEDIA_ROOT=/media/
MEDIA_URL=/media/

# Alternative: Supabase Storage (if using Supabase)
USE_SUPABASE_STORAGE=False
SUPABASE_STORAGE_BUCKET=user-files

# Alternative: Backblaze B2 (if cost-optimizing)
BACKBLAZE_APPLICATION_KEY_ID=your-backblaze-key-id
BACKBLAZE_APPLICATION_KEY=your-backblaze-application-key
BACKBLAZE_BUCKET_NAME=your-bucket-name

# ============================================
# Monitoring & Logging (Production)
# ============================================
SENTRY_DSN=your-sentry-dsn-here
LOG_LEVEL=INFO

# ============================================
# Multi-Tenancy Configuration
# ============================================
# Default organization for new users
DEFAULT_ORGANIZATION_SLUG=default
# Allow users to create new organizations
ALLOW_ORG_CREATION=True
# Maximum users per organization (basic tier)
MAX_USERS_PER_ORG=10

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ANON=100/hour
RATE_LIMIT_USER=1000/hour

# ============================================
# Feature Flags
# ============================================
ENABLE_NOTIFICATIONS=True
ENABLE_FILE_UPLOAD=True
ENABLE_SENTIMENT_ANALYSIS=True
ENABLE_AUDIT_LOGGING=True
ENABLE_REALTIME=True

# ============================================
# Social Media APIs
# ============================================
# Facebook Graph API (FREE)
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-page-access-token
FACEBOOK_PAGE_ID=your-facebook-page-id

# Instagram Graph API (FREE - requires Facebook Business account)
INSTAGRAM_BUSINESS_ACCOUNT_ID=your-instagram-business-account-id
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Twitter/X API (Expensive - optional)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# ============================================
# News Aggregation APIs
# ============================================
# GNews API (Recommended - affordable with good coverage)
GNEWS_API_KEY=your-gnews-api-key

# Alternative: MediaStack (500 free calls/month)
MEDIASTACK_API_KEY=your-mediastack-api-key

# Alternative: NewsAPI.org
NEWSAPI_ORG_KEY=your-newsapi-key

# ============================================
# Analytics & Tracking
# ============================================
# Google Analytics 4 (FREE - configured on frontend)
# GA4_MEASUREMENT_ID configured in frontend/.env

# Mixpanel (FREE for 1M events/month)
MIXPANEL_TOKEN=your-mixpanel-project-token

# ============================================
# Payment Gateway APIs (India)
# ============================================
# PhonePe Payment Gateway (Recommended - FREE for UPI)
PHONEPE_MERCHANT_ID=your-phonepe-merchant-id
PHONEPE_SALT_KEY=your-phonepe-salt-key
PHONEPE_SALT_INDEX=your-phonepe-salt-index
PHONEPE_ENV=sandbox

# Cashfree Payment Gateway (Backup - 1.6-1.95% transaction fee)
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret-key
CASHFREE_ENV=sandbox

# Alternative: Razorpay (2% transaction fee)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Alternative: Paytm (1.99% transaction fee)
PAYTM_MERCHANT_ID=your-paytm-merchant-id
PAYTM_MERCHANT_KEY=your-paytm-merchant-key

# Choose primary payment gateway: phonepe, cashfree, razorpay, paytm
PRIMARY_PAYMENT_GATEWAY=phonepe

# ============================================
# Voice/Call API (Exotel - India)
# ============================================
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_SID=your-exotel-sid
EXOTEL_CALLER_ID=your-exotel-caller-id

# Alternative: Twilio Voice (expensive for India)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ============================================
# Indian Government Data APIs (FREE)
# ============================================
# India Census API (FREE)
CENSUS_API_BASE_URL=https://censusindia.gov.in/census.website/data/api

# Data.gov.in API (FREE)
DATA_GOV_IN_API_KEY=your-data-gov-in-api-key

# ============================================
# Application URLs (for callbacks, webhooks, etc.)
# ============================================
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://127.0.0.1:8000
SITE_URL=http://localhost:5173
API_URL=http://127.0.0.1:8000

# Production URLs (uncomment for production)
# FRONTEND_URL=https://pulseofpeople.com
# BACKEND_URL=https://api.pulseofpeople.com
# SITE_URL=https://pulseofpeople.com
# API_URL=https://api.pulseofpeople.com
