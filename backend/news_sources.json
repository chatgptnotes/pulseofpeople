{
  "version": "1.0",
  "last_updated": "2025-11-10",
  "description": "Configuration for Tamil Nadu political news sources",
  "scraping_schedule": {
    "frequency": "every 6 hours",
    "times": ["00:00", "06:00", "12:00", "18:00"],
    "timezone": "Asia/Kolkata"
  },
  "sources": {
    "tamil": [
      {
        "name": "Dinamalar",
        "url": "https://www.dinamalar.com/chennai_news.asp",
        "language": "ta",
        "type": "html",
        "active": true,
        "scraper_function": "scrape_dinamalar",
        "selectors": {
          "news_list": ".NewsList",
          "title": "a",
          "link": "a[href]"
        },
        "description": "Leading Tamil daily newspaper with strong Chennai/TN coverage",
        "political_focus": true
      },
      {
        "name": "Dinakaran",
        "url": "https://www.dinakaran.com/tamilnadu",
        "language": "ta",
        "type": "html",
        "active": true,
        "scraper_function": "scrape_dinakaran",
        "selectors": {
          "news_list": ".news-item",
          "title": "h2, h3",
          "link": "a[href]"
        },
        "description": "Popular Tamil newspaper with Tamil Nadu political coverage",
        "political_focus": true
      },
      {
        "name": "Maalaimalar",
        "url": "https://www.maalaimalar.com/tamil-nadu-news",
        "language": "ta",
        "type": "html",
        "active": false,
        "scraper_function": "scrape_maalaimalar",
