        "political_focus": true,
        "note": "To be implemented in future"
      },
      {
        "name": "Polimer News",
        "url": "https://www.polimernews.com/tamil-nadu",
        "language": "ta",
        "type": "html",
        "active": false,
        "scraper_function": "scrape_polimer",
        "description": "Tamil news channel website (not yet implemented)",
        "political_focus": true,
        "note": "To be implemented in future"
      }
    ],
    "english": [
      {
        "name": "The Hindu",
        "url": "https://www.thehindu.com/news/national/tamil-nadu/feeder/default.rss",
        "language": "en",
        "type": "rss",
        "active": true,
        "scraper_function": "scrape_the_hindu_tn",
        "description": "Leading English daily with comprehensive TN political coverage",
        "political_focus": true
      },
      {
        "name": "Times of India",
        "url": "https://timesofindia.indiatimes.com/city/chennai",
        "language": "en",
        "type": "html",
        "active": true,
        "scraper_function": "scrape_times_of_india_chennai",
        "selectors": {
          "news_list": ".uwU81",
          "title": "a",
          "link": "a[href]"
        },
        "description": "Major English newspaper with Chennai/TN coverage",
        "political_focus": true
      },
      {
        "name": "Indian Express",
        "url": "https://indianexpress.com/section/cities/chennai/",
        "language": "en",
        "type": "html",
        "active": true,
        "scraper_function": "scrape_indian_express_tn",
        "selectors": {
          "news_list": ".articles",
          "title": "h2 a",
          "link": "h2 a[href]"
        },
        "description": "National daily with strong Chennai political coverage",
        "political_focus": true
      },
      {
        "name": "Deccan Chronicle",
        "url": "https://www.deccanchronicle.com/south",
        "language": "en",
        "type": "html",
        "active": false,
        "scraper_function": "scrape_deccan_chronicle",
        "description": "South India focused newspaper (not yet implemented)",
        "political_focus": true,
        "note": "To be implemented in future"
      }
    ]
