# =====================================================
# BACKEND ENVIRONMENT VARIABLES EXAMPLE
# =====================================================
# Copy this to backend/.env and fill in your actual values
# NEVER commit the actual .env file to git

# Django Settings
SECRET_KEY=django-insecure-development-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-railway-app.up.railway.app

# Supabase PostgreSQL Database (Session Pooler for Railway)
DB_NAME=postgres
DB_USER=postgres.your-project-ref
DB_PASSWORD=your-password-here
DB_HOST=aws-1-ap-south-1.pooler.supabase.com
DB_PORT=6543
DB_SSLMODE=prefer
USE_SQLITE=False

# CORS Settings (comma-separated origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Supabase Authentication
# Find these in: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here
# SUPABASE_SERVICE_KEY=your-service-role-key-here (optional)

# =====================================================
# FRONTEND ENVIRONMENT VARIABLES EXAMPLE
# =====================================================
# Copy this to frontend/.env and fill in your actual values

# Supabase Configuration (public keys - safe to expose)
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-public-key-here

# SECURITY WARNING: NEVER add these to frontend/.env:
# - SUPABASE_JWT_SECRET (backend only)
# - SUPABASE_SERVICE_KEY (backend only)
# - JWT_SECRET (backend only)

# Application Settings
VITE_APP_URL=http://localhost:5173
VITE_APP_NAME=Pulse of People

# Multi-tenancy Settings
VITE_MULTI_TENANT=false
VITE_TENANT_MODE=subdomain
VITE_DEFAULT_TENANT=tvk

# Django Backend API
VITE_DJANGO_API_URL=http://127.0.0.1:8000/api

# Mapbox (for interactive maps)
VITE_MAPBOX_ACCESS_TOKEN=pk.your-mapbox-token-here

# Optional Services
VITE_EMAIL_SERVICE=supabase
VITE_DNS_PROVIDER=cloudflare
VITE_PAYMENT_GATEWAY=mock
